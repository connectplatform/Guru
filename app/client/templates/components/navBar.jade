.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner.navBarContainer
    .container-fluid
      a.brand.brandSpacing(href='#')
        strong #{appName}
      ul.nav
        li
          a(href='#/dashboard') Dashboard
            span.notifyUnanswered.badge.badge-warning
            span.notifyInvites.badge.badge-important
        li.newChatSelector
          a(href='#/operatorChat') Chats
            span.notifyUnread.badge.badge-info
        if role == "Owner"
          ul.nav
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown') Administration
              b.caret
            ul.dropdown-menu.collapse.in
              li
                a(href="#/account")
                  i.icon-briefcase
                  | Account
              li
                a(href='#/userProfile')
                  i.icon-user
                  | Users
              li
                a(href='#/Websites')
                  i.icon-shopping-cart
                  | Websites
              li
                a(href='#/specialties')
                  i.icon-tags
                  | Specialties
      ul.nav.pull-right
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown') Logged in as <span class="username">#{username}</span>
            b.caret
          ul.dropdown-menu.collapse.in
            li
              a(href='#/userProfile')
                i.icon-user
                | Profile
            li
              a(href="#/logout")
                i.icon-off
                | Logout
        li
          div#help
